<div class="ui segment">
  <h3>Conversations</h3>

  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
          <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>
          <div class="horizontal-align">
            <% if recipient.online? %>
              <div class="online-status-indicator" style="display: inline-block;"></div>
            <% else %>
              <div class="offline-status-indicator" style="display: inline-block;"></div>
            <% end %>
            <%= link_to recipient.username, conversation_messages_path(conversation)%>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


<div class="ui segment">
  <h3>All Users</h3>
  <div class="ui list">
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
      <div class="item">
        <div class="horizontal-align">
            <% if user.online? %>
              <div class="online-status-indicator" style="display: inline-block;"></div>
            <% else %>
              <div class="offline-status-indicator" style="display: inline-block;"></div>
            <% end %>
          <%= link_to user.username, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
