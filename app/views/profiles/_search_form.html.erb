<fieldset class="search-field">
  <legend>Search Our Database</legend>
  <%= search_form_for @search do |f| %>
    <div class="field">
      <%= f.label :class_rank_cont, "Class Rank contains" %>
      <%= f.text_field :class_rank_cont %>
    </div>

    <div class="btn-group" role="group" aria-label="...">
	  <button type="button" class="btn btn-default">Left</button>
	  <button type="button" class="btn btn-default">Middle</button>
	  <button type="button" class="btn btn-default">Right</button>
	</div>

	<div class="btn-group" data-toggle="buttons">
	  <label class="btn btn-primary">
	    <input type="checkbox" autocomplete="off" checked> Checkbox 1
	  </label>
	  <label class="btn btn-primary">
	    <input type="checkbox" id="myStateButton" autocomplete="off"> Checkbox 2
	  </label>
	  <label class="btn btn-primary">
	    <input type="checkbox" autocomplete="off"> Checkbox 3
	  </label>
	</div>

	<script>
	  $('#myStateButton').on('click', function () {
	    $(this).button('toggle') 
	  })
	</script>

    <div class="field">
      <%= f.label "Characteristics" %><br />
      <%= f.collection_check_boxes :characteristics_id_in_any, Characteristic.all, :id, :name do |b| %>
        <div class="collection-check-box">
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>
    </div>

    <div class="actions"><%= f.submit "Search" %></div>
  <% end %>
</fieldset>